<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atharvakale.facerecognition">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/face_icon2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/face_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.FaceRecognition.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.stc.attendance.RecyclerviewUserActivity"
            android:exported="false" />
        <activity
            android:name="com.stc.attendance.ManagerActivity"
            android:exported="true" />
        <activity
            android:name="com.stc.attendance.RecyclerviewAttendanceActivity"
            android:exported="false" />
        <activity
            android:name="com.stc.attendance.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.stc.attendance.AttendanceActivity"
            android:exported="true" />
        <activity
            android:name="com.stc.attendance.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stc.attendance.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.stc.attendance.LoginActivity"
            android:exported="true" />
        <activity android:name="com.stc.attendance.MainActivity" />
        <activity
            android:name="com.stc.attendance.splash_screen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FaceRecognition.NoActionBar" />
    </application>

</manifest>